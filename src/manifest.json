{
  "name": "McGill Enhanced",
  "author": "kozirisdev",
  "manifest_version": 2,
  "version": "3.3.84",
  "description": "Enhance the functionality of McGill.ca",
  "permissions": [
    "storage",
    "*://www.mcgill.ca/study/*",
    "*://mcgill.ca/study/*",
    "*://horizon.mcgill.ca/*",
    "*://www.docuum.com/McGill*",
    "*://vsb.mcgill.ca/*",
  ],
  "background": {
    "scripts": [
      "js/backgroundHTTP.js",
      "js/background.js" ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "38": "icons/mcgill-128.png",
      "128": "icons/mcgill-128.png"
    },
    "default_popup": "menu/quicklinksMenu.html",
    "default_title": "Click to view Quick Links Menu!"
  },
  "icons": {
    "128": "icons/mcgill-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.mcgill.ca/study/*",
        "*://mcgill.ca/study/*",
        "*://horizon.mcgill.ca/*",
        "*://www.docuum.com/McGill*",
        "*://vsb.mcgill.ca/*"
      ],
      "js": [
        "lib/jquery-1.11.2.min.js",
        "lib/tooltipsy.min.js",
        "lib/levenshtein.js",
        "lib/md5.js",
        "js/dataDocuum.js",
        "js/dataMercury.js",
        "js/dataRecordings.js",
        "js/dataClassAverages.js",
        "js/dataCourseTitles.js",
        "js/addSidebar.js",
        "js/addYearMenu.js",
        "js/addAveCrowdsource.js",
        "js/addProfLinks.js",
        "js/addCourseLinks.js",
        "js/applyToolTipsy.js",
        "js/addCourseTitleTooltips.js",
        "js/vsbEnhanced.js",
        "js/init.js"
      ]
    },
    {
      "all_frames": true,
      "matches": [
        "*://www.mcgill.ca/study/*",
        "*://horizon.mcgill.ca/*",
        "*://www.docuum.com/McGill*",
        "*://vsb.mcgill.ca/*"
      ],
      "js": [
        "js/insertCSS.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://horizon.mcgill.ca/pban1/bwskfshd.P_CrseSchdDetl*"
      ],
      "js": [
        "lib/uuid-random.js",
        "lib/icsLib.js",
        "js/dataMcGillMap.js",
        "js/scheduleExport.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "css/sidebar.css",
    "css/yearMenu.css",
    "css/aveCrowdsource.css",
    "css/profLinks.css",
    "css/profLinks.css",
    "css/programs.css",
    "css/vsb.css",
    "css/minerva.css",
    "icons/empty-15.png"
  ]
}



